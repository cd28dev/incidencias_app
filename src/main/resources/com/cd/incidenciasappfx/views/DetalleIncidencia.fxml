<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="modalPane" prefHeight="500" prefWidth="700" styleClass="modal"
            stylesheets="@/com/cd/incidenciasappfx/styles/nuevousuario.css" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cd.incidenciasappfx.controllers.DetalleIncidenciaController">

    <VBox alignment="CENTER" layoutX="20" layoutY="20" spacing="10" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label fx:id="lblTitle" styleClass="modal-title" text="Detalle de la Incidencia"/>
        <Separator/>
        <!-- Sección Incidencia -->
        <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
            <Label styleClass="label-titulo" text="Sector:"/>
            <Label fx:id="lblSector" styleClass="label-dato" text="gaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                   GridPane.columnIndex="1"/>

            <Label styleClass="label-titulo" text="Urbanización:" GridPane.rowIndex="1"/>
            <Label fx:id="lblUrbanizacion" styleClass="label-dato" text="gaaa" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>

            <Label styleClass="label-titulo" text="Dirección:" GridPane.rowIndex="2"/>
            <Label fx:id="lblDireccion" styleClass="label-dato" text="gaaa" GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>

            <Label styleClass="label-titulo" text="T.Intervencion:" GridPane.rowIndex="3"/>
            <Label fx:id="lblIntervencion" styleClass="label-dato" text="gaaa" GridPane.columnIndex="1"
                   GridPane.rowIndex="3"/>

            <Label styleClass="label-titulo" text="T.Servicio:" GridPane.rowIndex="4"/>
            <Label fx:id="lblServicio" styleClass="label-dato" text="gaaa" GridPane.columnIndex="1"
                   GridPane.rowIndex="4"/>

            <Label styleClass="label-titulo" text="Fecha:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Label fx:id="lblFecha" styleClass="label-dato" text="gaaa" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label styleClass="label-titulo" text="Ocurrencia:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Label fx:id="lblOcurrencia" styleClass="label-dato" text="gaaa" GridPane.columnIndex="3"
                   GridPane.rowIndex="1"/>

            <Label styleClass="label-titulo" text="Infracción:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <Label fx:id="lblDelito" styleClass="label-dato" text="gaaa" GridPane.columnIndex="3"
                   GridPane.rowIndex="2"/>

            <Label styleClass="label-titulo" text="Descripción:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
            <Label fx:id="lblDescripcion" prefWidth="300" styleClass="label-dato" text="gaaa" wrapText="true"
                   GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            <columnConstraints>
                <ColumnConstraints maxWidth="127.0" minWidth="91.0" prefWidth="122.0"/>
                <ColumnConstraints maxWidth="255.0" minWidth="196.0" prefWidth="223.0"/>
                <ColumnConstraints maxWidth="123.0" minWidth="48.0" prefWidth="93.0"/>
                <ColumnConstraints maxWidth="281.0" minWidth="160.0" prefWidth="190.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
        <Separator/>
        <!-- Sección Infractor -->
        <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
            <Label styleClass="label-titulo" text="DNI del Infractor:"/>
            <Label fx:id="lblDniInfractor" styleClass="label-dato" GridPane.columnIndex="1"/>

            <Label styleClass="label-titulo" text="Nombres:" GridPane.rowIndex="1"/>
            <Label fx:id="lblNombresInfractor" styleClass="label-dato" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label styleClass="label-titulo" text="Apellidos:" GridPane.rowIndex="2"/>
            <Label fx:id="lblApellidosInfractor" styleClass="label-dato" GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>

            <Label styleClass="label-titulo" text="Teléfono:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Label fx:id="lblTelefonoInf" styleClass="label-dato" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label styleClass="label-titulo" text="Descargo:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Label fx:id="lblDescargoInf" prefWidth="300" styleClass="label-dato" wrapText="true"
                   GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.rowSpan="2"/>
            <columnConstraints>
                <ColumnConstraints maxWidth="125.0" minWidth="116.0" prefWidth="123.0"/>
                <ColumnConstraints maxWidth="229.0" minWidth="0.0" prefWidth="222.0"/>
                <ColumnConstraints maxWidth="198.0" minWidth="10.0" prefWidth="85.0"/>
                <ColumnConstraints maxWidth="281.0" minWidth="160.0" prefWidth="190.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
        <Separator/>
        <!-- Sección Agraviado -->
        <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10" visible="true">
            <Label styleClass="label-titulo" text="DNI del Agraviado:"/>
            <Label fx:id="lblDniAgraviado" styleClass="label-dato" text="No existe" GridPane.columnIndex="1"/>

            <Label styleClass="label-titulo" text="Nombres:" GridPane.rowIndex="1"/>
            <Label fx:id="lblNombresAgraviado" styleClass="label-dato" text="No existe" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>

            <Label styleClass="label-titulo" text="Apellidos:" GridPane.rowIndex="2"/>
            <Label fx:id="lblApellidosAgraviado" styleClass="label-dato" text="No existe" GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>

            <Label styleClass="label-titulo" text="Teléfono:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Label fx:id="lblTelefonoAgr" styleClass="label-dato" text="No existe" GridPane.columnIndex="3"
                   GridPane.rowIndex="0"/>

            <Label styleClass="label-titulo" text="Descargo:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Label fx:id="lblDescargoAgr" prefWidth="300" styleClass="label-dato" text="No existe" wrapText="true"
                   GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.rowSpan="2"/>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints maxWidth="214.0" minWidth="63.0" prefWidth="214.0"/>
                <ColumnConstraints maxWidth="174.0" minWidth="0.0" prefWidth="82.0"/>
                <ColumnConstraints maxWidth="294.0" minWidth="160.0" prefWidth="190.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
        <Separator/>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="btnCerrar" styleClass="btn-danger" text="Cerrar" onAction="#cerrarModal"/>
        </HBox>
    </VBox>
</AnchorPane>
