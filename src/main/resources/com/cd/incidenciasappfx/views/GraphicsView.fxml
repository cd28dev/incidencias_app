<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cd.incidenciasappfx.controllers.GraphicsController"
      stylesheets="@/com/cd/incidenciasappfx/styles/page.css">

    <!-- Encabezado -->
    <HBox spacing="10" styleClass="header">
        <Label text="Gráficos de Incidencias" styleClass="header-title"/>
        <Region HBox.hgrow="ALWAYS"/>

        <!-- Botones de Exportación -->
        <Button fx:id="btnExportPdf" styleClass="btn-export">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <Image url="@/com/cd/incidenciasappfx/images/pdf.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <HBox spacing="20" alignment="CENTER_LEFT" styleClass="toolbar">
        <Label text="Selecciona gráfico:" styleClass="form-label"/>

        <ComboBox fx:id="comboTipoGrafico" onAction="#mostrarGraficoSeleccionado" styleClass="combo-field">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Por Ocurrencia"/>
                    <String fx:value="Por Intervención"/>
                    <String fx:value="Por Apoyo"/>
                    <String fx:value="Por Servicio"/>
                    <String fx:value="Por Urbanización"/>
                    <String fx:value="Por Sector"/>
                    <String fx:value="Por Delito"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Region HBox.hgrow="ALWAYS"/>
    </HBox>


    <!-- Contenedor para gráficos -->
    <StackPane fx:id="chartContainer" VBox.vgrow="ALWAYS" styleClass="chart-container"/>

    <HBox spacing="10" alignment="CENTER" styleClass="footer">
        <Label text="© 2025 Mi Aplicación - Todos los derechos reservados"/>
    </HBox>
</VBox>
